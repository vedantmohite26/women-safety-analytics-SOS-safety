rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Users can only write to their own profile
      allow write: if isOwner(userId);
      
      // Emergency contacts subcollection
      match /contacts/{contactId} {
        allow read, write: if isOwner(userId);
      }
      
      // Safety zones subcollection
      match /zones/{zoneId} {
        allow read, write: if isOwner(userId);
      }
      
      // Notifications subcollection
      match /notifications/{notificationId} {
        // Allow anyone to send a notification (create)
        allow create: if isAuthenticated();
        // Only owner can read, update, or delete their notifications
        allow read, update, delete: if isOwner(userId);
      }
    }
    
    // Hub messages - location-based public chat
    match /hub_messages/{messageId} {
      // Anyone authenticated can read hub messages
      allow read: if isAuthenticated();
      
      // Users can create messages with their own ID
      allow create: if isAuthenticated() 
                    && request.resource.data.senderId == request.auth.uid
                    && request.resource.data.keys().hasAll(['senderId', 'senderName', 'text', 'timestamp', 'expiresAt', 'senderLocation'])
                    && request.resource.data.text is string
                    && request.resource.data.text.size() > 0
                    && request.resource.data.text.size() <= 500;
      
      // Users can delete their own messages or expired messages can be deleted
      allow delete: if isAuthenticated() 
                    && (resource.data.senderId == request.auth.uid 
                        || request.time > resource.data.expiresAt);
      
      // No updates allowed - messages are immutable
      allow update: if false;
    }
    
    // Private chats
    match /chats/{chatId} {
      // Users can read chats they're part of
      allow read: if isAuthenticated() 
                  && request.auth.uid in resource.data.participants;
      
      // Users can create chats where they are a participant
      allow create: if isAuthenticated() 
                    && request.auth.uid in request.resource.data.participants;
      
      // Users can update chats they're part of (for last message updates)
      allow update: if isAuthenticated() 
                    && request.auth.uid in resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Users can read messages in chats they're part of
        allow read: if isAuthenticated() 
                    && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Users can create messages in chats they're part of
        allow create: if isAuthenticated() 
                      && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
                      && request.resource.data.senderId == request.auth.uid;
        
        // Users can update their own messages (for read receipts)
        allow update: if isAuthenticated() 
                      && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Users can delete expired messages or their own messages
        allow delete: if isAuthenticated() 
                      && (request.resource.data.senderId == request.auth.uid
                          || request.time > resource.data.expiresAt);
      }
    }
    
    // SOS Alerts
    match /sos_alerts/{alertId} {
      // Anyone authenticated can read alerts
      allow read: if isAuthenticated();
      
      // Users can create alerts with their own ID
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own alerts
      allow update: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
      
      // Users can delete their own alerts
      allow delete: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
    }
    
    // Safety places (crowdsourced public safety locations)
    match /safety_places/{placeId} {
      // Anyone authenticated can read safety places
      allow read: if isAuthenticated();
      
      // Any authenticated user can add safety places
      allow create: if isAuthenticated() 
                    && request.resource.data.addedBy == request.auth.uid;
      
      // Only the user who added it can update
      allow update: if isAuthenticated() 
                    && resource.data.addedBy == request.auth.uid;
      
      // Only the user who added it can delete
      allow delete: if isAuthenticated() 
                    && resource.data.addedBy == request.auth.uid;
    }
    
    // Diagnostics collection (for testing/debugging)
    match /diagnostics/{docId} {
      allow read, write: if isAuthenticated();
    }
    
    // Block all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
